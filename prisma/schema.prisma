// MHG Sofra - Meal Ordering System Schema
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model - Simple username-based identification
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
  pushSubscriptions PushSubscription[]
  
  @@index([username])
}

// Restaurant Model
model Restaurant {
  id            String   @id @default(cuid())
  name          String
  phone         String?
  deliveryPrice Float    @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  menuItems     MenuItem[]
  orders        Order[]
  
  @@index([name])
}

// MenuItem Model
model MenuItem {
  id           String   @id @default(cuid())
  name         String
  price        Float
  mealType     MealType
  description  String?  @db.Text
  options      String[] @default([])
  isAvailable  Boolean  @default(true)
  restaurantId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  orderItems   OrderItem[]
  
  @@index([restaurantId])
  @@index([mealType])
}

// Order Model
model Order {
  id           String      @id @default(cuid())
  orderNumber  String      @unique
  userId       String
  restaurantId String
  mealType     MealType
  totalAmount  Float
  status       OrderStatus @default(PENDING)
  orderDate    DateTime    @default(now())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  user         User        @relation(fields: [userId], references: [id])
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  items        OrderItem[]
  
  @@index([userId])
  @@index([restaurantId])
  @@index([mealType])
  @@index([orderDate])
  @@index([orderNumber])
}

// OrderItem Model - Junction table
model OrderItem {
  id             String   @id @default(cuid())
  orderId        String
  menuItemId     String
  quantity       Int      @default(1)
  price          Float    // Store price at time of order
  selectedOption String?  // Store selected option (e.g., "شامي", "بلدي")
  createdAt      DateTime @default(now())
  
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  
  @@index([orderId])
  @@index([menuItemId])
}

// Admin Model
model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([username])
}

// Push Subscription Model
model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  keys      Json
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}

// Enums
enum MealType {
  APPETIZER
  BREAKFAST
  LUNCH
  DINNER
  DESSERT
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}
